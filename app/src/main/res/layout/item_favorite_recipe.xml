<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="favoriteRecipeItemViewModel"
            type="com.example.recipesapp.ui.main.favorite.FavoriteRecipeItemViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/movieItem"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="2dp"
        android:onClick="@{(view)->favoriteRecipeItemViewModel.onItemClick(view)}">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/recipe_thumb_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder"
                android:imageSrc="@{favoriteRecipeItemViewModel.recipeThumbnail}" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:alpha="0.7"
                android:background="@color/dFadeBackground"
                android:padding="5dp">

                <TextView
                    android:id="@+id/recipe_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:text="@{favoriteRecipeItemViewModel.recipeName}"
                    android:textColor="@color/dFadeTitleColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>


    </androidx.cardview.widget.CardView>

</layout>